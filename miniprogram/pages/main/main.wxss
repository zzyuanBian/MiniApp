.metting_model{
  position: relative;
  margin: 50rpx 88rpx 0;
  min-height: 100rpx;
  padding: 80rpx 0;
}
.metting_model .line{
  background: linear-gradient(#f0dcd6, #da5858, #f0dcd6);
  width: 2rpx;
  height: 100%;
  position: absolute;
  left: calc(50% - 1rpx);
  top: 0rpx;
  z-index: -1;
}

.metting_model .item{
  position: relative;
  width: 100%;
  display: flex;
  margin: 40rpx 0;
}
.metting_model .item .item_text{
  width: 50%;
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  color: #f0dcd6;
  text-align: center;
  line-height: 44rpx;
  padding: 0 20rpx;
}
.metting_model .item image{
  position: absolute;
  left: calc(50% - 12rpx);
  top: 10rpx;
  width: 24rpx;
  height: 24rpx;
  transform: rotate(-315deg);
  background: #f0dcd6;
}

.top_title{
  font-family: PingFangSC-Light;
  text-align: center;
  font-size: 40rpx;
  color: #f0dcd6;
  letter-spacing: 25rpx;
}
.top_local{
  font-family: PingFangSC-Light;
  margin: 104rpx auto 0;
  width: 44rpx;
  font-size: 36rpx;
  color: #f0dcd6;
  text-align: center;
}
.top_time{
  margin: 40rpx auto 0;
  height: 25px;
  font-family: PingFangSC-Light;
  font-size: 36rpx;
  color: #f0dcd6;
  text-align: center;
}
.top_hold{
  margin: auto auto 82rpx;
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #f0dcd6;
  letter-spacing: -0.8rpx;
  text-align: center;
}
.no_tips{
  font-family: PingFangSC-Regular;
  font-size: 30px;
  color: #f0dcd6;
  text-align: center;
  margin: auto;
}
.main_title{
  margin: 206rpx 88rpx 0;
