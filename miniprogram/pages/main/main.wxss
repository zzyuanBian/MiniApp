.container {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: #6D1E18;
  display: flex;
  flex-direction: column;
  margin: 0 auto;
  z-index: -3;
}

.container image {
  position: absolute;
  width: 100%;
  z-index: -2;
}

.model {
  position: absolute;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  margin: 0 auto;
  background-color: #610f0e;
  z-index: 1;
}

.buttons {
  position: absolute;
  flex-direction: column;
  margin:auto;
  bottom: 5%;
  width: 40%;
  left: 30%;
}

.buttons button {
  position: relative;
  background-color: grey;
  width: 100%;
  margin-bottom: 15rpx;
  border-radius: 20rpx;
  background-color:rgb(204, 180, 180) ;
